<ul>
  {{#each items}}
    <li data-id="{{id}}">
      <figure>
        <img src="/images/{{image}}" alt="Item in cart: {{imgAlt}}">
      </figure>
      <p>{{quantity}} x {{formatPrice price}}</p>
    </li>
  {{/each}}
</ul>
<section>
  <h3>Your<br>shopping cart</h3>
  <p class="total">${{formatPrice totalPrice}}</p>
  <p></p>
  <footer>
    <a class="left empty_cart" href="#">Empty cart</a><!--
    --><a class="right checkout" href="/checkout">Checkout</a>
  </footer>
</section>